    //
    // Absolute path to a file (`.env`) containing environment variable
    // definitions
    "python.envFile": "${workspaceFolder}\\.vscode\\dev.env",
    //
    // Path to default Python to use when extension loads up for the first time,
    // no longer used once an interpreter is selected for the workspace. See the
    // follosing url to understand when this is used 
    // https://github.com/microsoft/vscode-python/wiki/Setting-descriptions#pythondefaultinterpreterpath
    // NOTE: `.env` variable can NOT be used here
    "python.defaultInterpreterPath": "C:\\bin\\venv\\.dev310\\Scripts\\python.exe",
    //
    // ---------------------------------------------------------------
    // Test
    //
    // FIXME: refactor with `.env` variable
    //"python.testing.cwd":"${workspaceFolder}/src/tests",
    //  "python.testing.pytestArgs": [
    //  "./src"
    //],
    //
    "pythonTestExplorer.testFramework": "pytest",
    //
    // FIXME: refactor with `.env` variable
    //"pythonTestExplorer.testplanArgs": [
    //  "${workspaceFolder}/src"
    //],
    "python.testing.unittestEnabled": false,
    "python.testing.nosetestsEnabled": false,
    "python.testing.pytestEnabled": true,
