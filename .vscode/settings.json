    // Pylance extension
    //
    // FIXME: refactor with `.env` variable
    "python.analysis.extraPaths": [
      "./src"
    ],
    // 
    // ---------------------------------------------------------------
    // cSpell extension
    //
    // - replace <proj_name> with local project name -> analytic_dev
